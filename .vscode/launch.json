{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug dev server with chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "dev serve",
      "postDebugTask": "stop server"
    },
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/inst/vscode-extension"
      ],
      "outFiles": ["${workspaceRoot}/inst/**/build/*.js"],
      "preLaunchTask": "dev build"
    },
    {
      "name": "Run extension unit tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/inst/vscode-extension/",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["test"]
    },
    {
      "type": "R-Debugger",
      "name": "Launch R-Workspace",
      "request": "launch",
      "debugMode": "workspace",
      "workingDirectory": "${workspaceFolder}"
    },
    {
      "type": "R-Debugger",
      "name": "Debug R-File",
      "request": "launch",
      "debugMode": "file",
      "workingDirectory": "${workspaceFolder}",
      "file": "${file}"
    },
    {
      "type": "R-Debugger",
      "name": "Debug R-Function",
      "request": "launch",
      "debugMode": "function",
      "workingDirectory": "${workspaceFolder}",
      "file": "${file}",
      "mainFunction": "main",
      "allowGlobalDebugging": false
    },
    {
      "type": "R-Debugger",
      "name": "Debug R-Package",
      "request": "launch",
      "debugMode": "workspace",
      "workingDirectory": "${workspaceFolder}",
      "includePackageScopes": true,
      "loadPackages": ["."]
    },
    {
      "type": "R-Debugger",
      "request": "attach",
      "name": "Attach to R process",
      "splitOverwrittenOutput": true
    },
    {
      "type": "msedge",
      "name": "Launch Microsoft Edge to debug editor dev server",
      "request": "launch",
      "runtimeArgs": ["--remote-debugging-port=9222"],
      "url": "http://localhost:3000",
      "presentation": {
        "hidden": true
      },
      "preLaunchTask": "dev serve",
      "postDebugTask": "stop server"
    },
    {
      "type": "vscode-edge-devtools.debug",
      "name": "Open Edge DevTools to debug editor dev server",
      "request": "attach",
      "url": "http://localhost:3000",
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug dev server with Edge",
      "configurations": [
        "Launch Microsoft Edge to debug editor dev server",
        "Open Edge DevTools to debug editor dev server"
      ]
    }
  ]
}
