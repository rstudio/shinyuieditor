{
  "name": "vscode-extension",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rstudio/shinyuieditor/"
  },
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:shinyUiEditor.appFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "shinyUiEditor.appFile",
        "displayName": "ShinyUiEditor",
        "selector": [
          {
            "filenamePattern": "*app.R"
          }
        ]
      }
    ],
    "commands": []
  },
  "scripts": {
    "vscode:prepublish": "yarn build",
    "watch": "yarn build --watch",
    "build": "esbuild src/extension.ts --bundle --platform=node --target=node10.4 --external:vscode --outfile=out/extension.js",
    "lint": "eslint \"src/**/*.ts\"",
    "type-check": "tsc -p ./ --noEmit"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.65.0",
    "@types/winreg": "^1.2.31",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "esbuild": "^0.15.13",
    "eslint": "^8.26.0",
    "typescript": "latest"
  },
  "dependencies": {
    "communication-types": "*",
    "tsconfig": "*",
    "winreg": "^1.2.4"
  }
}
